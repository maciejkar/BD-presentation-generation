            height: self.texture_size[1]

            font_size: 32
            multilane: True
            size_hint : 1 , 0.2

        Label:
            id: path_image
            text: ""
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            font_size: 20
            multilane: True
            size_hint : 1 , 0.2
        Label:
            id: first_view
            text: ""
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            font_size: 20
            multilane: True
            size_hint : 1 , 0.2

        Label:
            id: second_view
            text: ""
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            font_size: 20
            multilane: True
            size_hint : 1 , 0.2
        Label:
            id: third_view
            text: ""
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            font_size: 20
            multilane: True
            size_hint : 1 , 0.2

        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1 , 0.1
            Button:
                text:"Wstecz"
                font_size: 32
                on_release: 
                    app.root.current = "third"
                    root.manager.transition.direction = "right"
            Button:
                text:"Stwórz i otwórz"
                font_size: 32
                on_release: 
                    root.make_presentation()
